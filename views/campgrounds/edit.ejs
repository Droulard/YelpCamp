<%- include("../partials/header") -%> 

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= Campground.name  %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= Campground._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Camp Name:</label>
                    <input class="form-control" id="name" type="text" value="<%= Campground.name %>"  name="campground[name]" required>
                </div>
                <div class="form-group">
                    <label for="campLink">Link For Camp:</label>
                    <input class="form-control" id="campLink" type="text" value="<%= Campground.link %>"  name="campground[link]" required>
                </div>
                <hr>
                <div class="input-group">
                    <label for="price">Price of Camp:</label>
                    <span class="input-group-addon">$</span>
                    <input type="number" id="price" class="form-control" name="campground[price]" placeholder=" <%= Campground.price %>" value="<%= Campground.price %>" min="0.00" step="0.01">
                </div>
                <hr>
                <div class="form-group">
                    <label for="desc">Description</label>
                    <textarea  class="form-control" id="desc" name="campground[desc]" id="" cols="10" rows="10" required><%= Campground.desc %></textarea>
                </div>

                <div class="form-group">
                    <label for="location">Location of Camp:</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" placeholder="<%=  Campground.location %>" value="<%= Campground.location %>">
                </div>

                <div class="form-group">
                    <label for="imglink">Link For Image</label>
                    <input class="form-control" id="imglink" type="text" value="<%= Campground.image %>" name="campground[image]" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block"> Submit</button>
                </div>
            </form>    
            <a href="/campgrounds">View Campgrounds</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %> 