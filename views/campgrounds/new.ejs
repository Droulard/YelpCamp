<%- include("../partials/header") -%> 

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new campground</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Camp Name:</label>
                    <input type="text" class="form-control" id="name"  placeholder="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="campLink">Link For Camp:</label>
                    <input class="form-control" id="campLink" type="text" placeholder="https://Camp.com"  name="link" required>
                </div>
                <hr>
                <div class="input-group">
                    <label for="price">Price of Camp:</label>
                    <span class="input-group-addon">$</span>
                    <input type="number" id="price" class="form-control" name="price" placeholder=" 0.00"  min="0.00" step="0.01">
                </div>
                <hr>
                <div class="form-group">
                    <label for="Desc">Description:</label>
                    <textarea type="text" class="form-control" id="Desc" placeholder="Description" name="desc" rows="10" cols="10" required> </textarea>
                </div>
                <div class="form-group">
                    <label for="location">Location of Camp:</label>
                    <input type="text" class="form-control" id="location" placeholder="location" name="location" required>
                </div>
                <div class="form-group">
                    <label for="Image">Image URL:</label>
                    <input class="form-control" type="text" placeholder="https://ImageUrl.com" name="image" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block"> Submit</button>
                </div>
            </form>    
        </div>
    </div>
</div>

<%- include("../partials/footer") %> 