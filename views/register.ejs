<%- include("partials/header") -%> 

<div class="container">
  <div class="row">
      <h1 style="text-align: center;">Registration</h1>
      <div style="width: 30%; margin: 30px auto;">
        <form class="form-horizontal" action="/register" method="post">
              <div class="form-group">
                <label for="username">Username:</label>
                <input class="form-control" type="text" name="username" placeholder="username" id="username" >
              </div>
              <div class="form-group">
                <label for="password">Password:</label>
                <input class="form-control" type="password" name="password" placeholder="password" id="password" >
              </div>
              <div class="form-group">
                <label for="firstName">First Name:</label>
                <input class="form-control" type="text" name="firstName" placeholder="Jhon" id="firstName" >
              </div>
              <div class="form-group">
                <label for="lastName">Last Name:</label>
                <input class="form-control" type="text" name="lastName" placeholder="Snow" id="lastName" >
              </div>
              <div class="form-group">
                <label for="email">Email</label>
                <input class="form-control" type="text" name="email" placeholder="JhonSnow@winterfell.com" id="email" >
              </div>
              <div class="form-group">
                <label for="avatarUrl">Avatar URL:</label>
                <input class="form-control" type="text" name="avatar" placeholder="avatar URL" id="avatarUrl" >
              </div>
              <div class="form-group">
                  <button class="btn btn-lg btn-primary btn-block"> Submit</button>
              </div>
              <div class="form-group">
                <a class="btn btn-default form-control" href="/login">Already Have An Account</a>
              </div>
          </form>   
      </div>
  </div>
</div>

<%- include("partials/footer") -%> 